{
  "name": "@nebulaai/theme-provider",
  "version": "1.0.0",
  "description": "A comprehensive theme provider with dark/light/system mode support and localStorage persistence",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "theme",
    "dark-mode",
    "light-mode",
    "typescript",
    "context"
  ],
  "author": "NebulaAI",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "tsup": "^8.0.0",
    "typescript": "^5.6.3"
  }
}