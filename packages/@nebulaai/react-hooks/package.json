{
  "name": "@nebulaai/react-hooks",
  "version": "1.0.0",
  "description": "A collection of powerful and reusable React hooks including mobile detection and toast notifications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "hooks",
    "typescript",
    "mobile",
    "toast",
    "utilities"
  ],
  "author": "Temporal AI Technologies Inc",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.11",
    "tsup": "^8.0.0",
    "typescript": "^5.6.3"
  }
}